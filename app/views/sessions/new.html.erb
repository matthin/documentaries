<%= form_for(@user, :url => sign_in_path) do |f| %>
  <div class="large-6 medium-6 columns">
    <%= f.text_field(:username, placeholder: 'Username') %>
  </div>

  <div class="large-6 medium-6 columns">
    <%= f.password_field(:password, placeholder: 'Password') %>
  </div>

  <div class="large-12 columns end">
    <%= f.submit('Sign In!') %>
  </div>
<% end %>
